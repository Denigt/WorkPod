<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/rounded_back_solid"
    tools:context=".fragments.Fragment_Dialog_Validar_Usuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_back_solid"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/IV_Btn_Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/button_btn_cancelar"/>

        <TextView
            android:id="@+id/TV_No_Validado_Usuario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Aún no has\nvalidado tu usuario"
            android:textSize="30dp"
            android:textColor="@color/blue"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/TV_Instrucciones_Enviar_Email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Sigue las instrucciones del correo de verificación que te hemos mandado para verificar tu usuario"
            android:textSize="20dp"
            android:textColor="@color/darkblue"/>

        <LinearLayout
            android:id="@+id/LLShareFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_back_button"
            android:orientation="vertical">

            <Button
                android:id="@+id/BtnResendEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparente"
                android:backgroundTint="@color/blue"
                android:text="Volver a enviar email"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>