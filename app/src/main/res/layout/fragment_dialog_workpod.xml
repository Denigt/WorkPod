<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="9"
    android:orientation="vertical"
    android:background="@drawable/rounded_back_solid"
    android:backgroundTint="@color/white"
    tools:context=".fragments.Fragment_Dialog_Workpod">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:elevation="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TVCapacidad1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:text="Capacidad 3 personas"
                        android:textColor="@color/ResaltarTexto"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="330dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TVDireccion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:text="c/Don Quijote de la mancha, 23, Alcalá de Henares"
                                android:textColor="@color/ResaltarTexto"
                                android:textSize="23dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </HorizontalScrollView>
                </LinearLayout>

                <ImageView
                    android:id="@+id/IVOcultarInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="20dp"
                    android:layout_weight="2"
                    android:src="@drawable/fill_icon_flecha_ocultar_info" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TVPrecio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/rounded_border_button"
                        android:padding="10dp"
                        android:text="0,20€/min"
                        android:textColor="@color/blue"
                        android:textSize="25dp" />

                    <ImageView
                        android:id="@+id/IVComoLlegar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rounded_back_button"
                        android:backgroundTint="#38B5FB"
                        android:src="@drawable/empty_icon_mapa_dialog_workpod"
                        android:padding="4dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="¿Cómo llegar?"
                        android:textColor="@color/ResaltarTexto"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TVCapacidad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Capacidad: 3 personas"
                    android:textColor="@color/ResaltarTexto"
                    android:textSize="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/cabina_workpod_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/cabina_workpod_2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_back_button">
                <Button
                    android:id="@+id/BtnReservarWorkpod"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/blue"
                    android:text="Reservar Workpod"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:background="?android:selectableItemBackground"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_border_button">
                    <Button
                        android:id="@+id/BtnAbrirAhora"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="¡Abrir Ahora!"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="28dp"
                        android:background="?android:selectableItemBackground"/>
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>