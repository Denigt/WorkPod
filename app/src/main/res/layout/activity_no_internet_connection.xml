<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".NoInternetConnectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IVNoInternetConecction"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/fill_icon_no_internet_connection"></ImageView>

        <TextView
            android:id="@+id/TVNoInternetConecction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="No conseguimos\nAcceder a internet"
            android:textColor="@color/blue"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLCheckInternet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginVertical="30dp"
        android:background="@color/light_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TVCheckInternet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Compruebe tener datos o estar conectado a la red wifi"
            android:textColor="@color/blue"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/lFBackInit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="18dp">
            <Button
                android:id="@+id/btnBackInit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Volver al inicio"
                android:lines="1"
                android:background="?selectableItemBackground"
                android:foreground="@drawable/rounded_border_button"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/lFReload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_back_button"
            android:layout_marginRight="5dp"
            >

            <Button
                android:id="@+id/btnReload"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:drawableLeft="@drawable/ic_fill_icon_reload"
                android:lines="1"
                android:text="Recargar"
                android:textColor="@color/white"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>