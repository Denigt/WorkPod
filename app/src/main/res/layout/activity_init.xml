<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InitActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Para ti, que eres un trabajador activo"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="29dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">
        <ImageSwitcher
            android:id="@+id/imgSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>
        <TextSwitcher
            android:id="@+id/txtSwitcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnSwitcher0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_empty_circle"
                android:tint="@color/blue"
                android:background="?android:selectableItemBackgroundBorderless"
                android:paddingHorizontal="10dp"/>
            <ImageButton
                android:id="@+id/btnSwitcher1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fill_circle"
                android:tint="@color/blue"
                android:background="?android:selectableItemBackgroundBorderless"
                android:paddingHorizontal="10dp"/>
            <ImageButton
                android:id="@+id/btnSwitcher2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fill_circle"
                android:tint="@color/blue"
                android:background="?android:selectableItemBackgroundBorderless"
                android:paddingHorizontal="10dp"/>
            <!--ImageButton
                android:id="@+id/btnSwitcher3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fill_circle"
                android:tint="@color/blue"
                android:background="?android:selectableItemBackgroundBorderless"
                android:paddingHorizontal="10dp"/-->
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnAcceder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Acceder"
            android:layout_marginRight="15dp"/>

        <Button
            android:id="@+id/btnConectar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Conectar"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginHorizontal="30dp"
        android:text="Registrarse"
        android:backgroundTint="@color/blue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="Terminos del servicio"
        android:gravity="center"/>



</LinearLayout>
