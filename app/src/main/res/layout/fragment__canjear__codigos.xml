<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.Fragment_Canjear_Codigos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TV_Titulo_Canjea_Codigos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="left"
            android:text="Canjea tus códigos\nde descuento"
            android:textColor="@color/blue"
            android:textSize="26dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IV_Btn_Cancelar_Descuento"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/button_btn_cancelar" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLDescuentoMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/blue"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/TV_Descuentos_Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:justificationMode="inter_word"
            android:padding="10dp"
            android:text="Si quieres canjear alguno de tus códigos de descuento en la próxima sesión de workpod, seleccionalo y se aplicará en tu próxima sesión "
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLDescuentoSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#E6F6FD"
        android:gravity="center">

        <TextView
            android:id="@+id/TV_Descuentos_Sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#E6F6FD"
            android:gravity="center_horizontal"
            android:justificationMode="inter_word"
            android:padding="10dp"
            android:text="Si quieres canjear alguno de tus códigos de descuento en esta sesión de workpod, seleccionalo y pulsa en canjear  "
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <EditText
        android:id="@+id/ETCanjearCodigos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Ingresa tu código y pulsa en guardar"
        android:textColorHint="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_border_button"
            android:orientation="vertical">

            <Button
                android:id="@+id/BtnCancelarDescuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparente"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_back_button"
                android:gravity="right"
                android:orientation="vertical">

                <Button
                    android:id="@+id/BtnGuardarDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/transparente"
                    android:backgroundTint="@color/blue"
                    android:paddingLeft="45dp"
                    android:paddingRight="46dp"
                    android:text="Guardar"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/TV_Descuentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Tus códigos de descuento"
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TV_No_Descuentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="No tienes códigos de descuento\nComparte tu código amigo"
        android:textColor="@color/blue"
        android:textSize="22dp"
        android:textStyle="bold"
        android:visibility="gone" />


    <ListView
        android:id="@+id/Lsv_codigo_descuento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="15dp" />

    <LinearLayout
        android:id="@+id/LLShareFriendDescuento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_back_button"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/BtnShareFriendCodeDescuento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparente"
            android:backgroundTint="@color/blue"
            android:text="Comparte tu código amigo"
            android:textAllCaps="false"
            android:textColor="#F3F3D8"
            android:textSize="23dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>