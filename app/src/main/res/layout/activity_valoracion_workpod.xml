<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#396DC5"
    android:orientation="vertical"
    tools:context=".ValoracionWorkpod">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LLFragmentTest"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="10"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TVOpinion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="35dp"
                    android:text="¡Nos interesa\ntu opinión!"
                    android:textColor="@color/ResaltarTexto"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TVOpinion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="¡Nos encantaría saber como ha sido tu\nexperiencia! ¿Tu valoración es importante\npara nosotros!"
                    android:textColor="#8B9097"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/TVOpinion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="¿Qué nota nos das en tu sesión de trabajo?"
                    android:textColor="#434C5C"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IVStar1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:adjustViewBounds="true"
                        android:src="@drawable/fill_icon_star"
                        app:tint="#D8D9DA" />

                    <ImageView
                        android:id="@+id/IVStar2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:src="@drawable/fill_icon_star"
                        app:tint="#D8D9DA" />

                    <ImageView
                        android:id="@+id/IVStar3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:src="@drawable/fill_icon_star"
                        app:tint="#D8D9DA" />

                    <ImageView
                        android:id="@+id/IVStar4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:src="@drawable/fill_icon_star"
                        app:tint="#D8D9DA" />

                    <ImageView
                        android:id="@+id/IVStar5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:src="@drawable/fill_icon_star"
                        app:tint="#D8D9DA" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TVOpinion3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="¿Responderías a unas preguntas para\n ayudarnos a conocerte mejor?\n¡Cuanto mayor sea nuestri conocimiento\nsobre ti, mejor será nuestro servicio!"
                    android:textColor="#8B9097"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/BtnParticiparValoracion"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="@color/Texto"
                    android:text="¡Sí! Quiero participar"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/BtnNoParticiparValoracion"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="35dp"
                    android:backgroundTint="@color/white"
                    android:text="Tal vez la próxima vez..."
                    android:textAllCaps="false"
                    android:textColor="@color/Texto"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>