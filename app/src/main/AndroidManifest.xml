<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.workpodapp.workpod">
    <!-- PERMISO PARA LLAMAR -->
    <uses-permission android:name="android.permission.CALL_PHONE" /> <!-- PERMISOS DE INTERNET -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- PERMISO READ EXTERNAL STORAGE -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- PERMISO WRITE EXTERNAL STORAGE -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- PERMISOS PARA ACCEDER A LA UBICACION -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkPod">
        <activity android:name=".PagoCorrectoActivity"></activity>
        <activity android:name=".paypalActivity" />
        <activity android:name=".NoInternetConnectionActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" /> <!-- ACTIVIDAD INICIAL -->
        <!-- FIREBASE -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logo_logofb" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/blue" /> <!-- ACTIVIDADES -->
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InitActivity"
            android:label="Inicio"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" /> <!-- ACTIVIDAD DE REGISTRO -->
        <activity
            android:name=".SigninActivity"
            android:label="Registrarse" /> <!-- ACTIVIDAD DE LOGIN -->
        <activity
            android:name=".LoginActivity"
            android:label="Acceder"
            android:windowSoftInputMode="stateHidden" /> <!-- ACTIVIDAD DE PRINCIPAL (mapa y menus) -->
        <activity
            android:name=".WorkpodActivity"
            android:label="Navegacion"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" /> <!-- ACTIVIDAD PARA MODIFICAR PERFIL -->
        <activity
            android:name=".ModPerfilActivity"
            android:label="Modificar perfil" /> <!-- ACTIVIDAD PARA ANADIR DIRECCIONES DE FACTURACION -->
        <activity
            android:name=".AddFacturacionActivity"
            android:label="Añadir dirección" />
        <activity
            android:name=".VerifyActivity"
            android:label="Validar Email"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".PasswordActivity"
            android:label="Contrasena Olvidada"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PagoActivity"
            android:label="Pago"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WebActivity"
            android:label="Web"
            android:screenOrientation="portrait" /> <!-- ACTIVIDADES DE VALORACION Y ENCUESTAS AL USUARIO -->
        <activity
            android:name=".Valoracion_Workpod_Final"
            android:screenOrientation="portrait" />
        <activity
            android:name=".testUsuario.Informacion_Usuario3"
            android:screenOrientation="portrait" />
        <activity
            android:name=".testUsuario.Informacion_Usuario2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".testUsuario.Informacion_Usuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ValoracionWorkpod"
            android:screenOrientation="portrait" />
    </application>

</manifest>